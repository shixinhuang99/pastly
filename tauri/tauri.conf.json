{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pastly",
  "identifier": "com.shixinhuang.pastly",
  "build": {
    "devUrl": "http://localhost:4000",
    "frontendDist": "../ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Utility",
    "shortDescription": "Clipboard manager synced across devices via local network",
    "longDescription": "Clipboard manager synced across devices via local network",
    "useLocalToolsDir": true,
    "macOS": {
      "minimumSystemVersion": "12.0.1",
      "signingIdentity": null
    },
    "windows": {
      "allowDowngrades": true,
      "webviewInstallMode": {
        "type": "skip"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
